try:

n=int(input('Введите длину бассейна:'))
m=int(input('Введите ширину бассейна:'))
x=int(input('Введите x:'))
y=int(input('Введите y:'))

except:

print('Вводить можно только числа')

if (n<m):

a=n
n=m
m=a

# теперь n - длинный бортик, m-короткий

if (x<n and y<m):

dist=[x,y,n-x,m-y]

# [расстояние от длинного бортика до человека,
# расстояние от короткого бортика до человека]
# выводим минимальное расстояние

print(min(dist))

else:

print('Координата больше размеров бассейна')
